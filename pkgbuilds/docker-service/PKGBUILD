validpgpkeys=()


package() {
	cd $srcdir
	install -Dm644 docker-compose@.service $pkgdir/usr/lib/systemd/system/docker-compose@.service
	install -Dm644 journald@noisy.conf $pkgdir/etc/systemd/docker-compose@.service
	install -Dm644 scrypted.yml $pkgdir/opt/scrypted/docker-compose.yml
}
