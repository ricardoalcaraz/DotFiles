pkgname=base-config
pkgver=1
pkgrel=6
pkgdesc="Configure ssh and firewall"
arch=("any")
url=""
license=('GPL')
groups=()
depends=("openssh" "ufw" "ethtool" "pacman-contrib" "wol")
makedepends=()
checkdepends=()
optdepends=()
source=("30-ssh-key-required.conf" "wol.rules" "clean-cache.hook" "allow-users.conf")
b2sums=(
