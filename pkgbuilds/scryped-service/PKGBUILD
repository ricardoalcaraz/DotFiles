package() {
	cd $srcdir
	install -Dm644 scrypted.yml $pkgdir/opt/scrypted/docker-compose.yml
	install -Dm644 backup-scrypted.service $pkgdir/etc/systemd/system/backup-scrypted.service
	install -Dm644 backup-scrypted.timer $pkgdir/etc/systemd/system/backup-scrypted.timer
	install -Dm755 restore-scrypted.sh $pkgdir/usr/bin/restore-scrypted.sh
	install -Dm755 backup-scrypted.sh $pkgdir/usr/bin/backup-scrypted.sh
    install -m644 *.*mount $pkgdir/etc/systemd/system/
}
